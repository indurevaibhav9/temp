{
  "name": "spreezy",
  "version": "0.0.0",
  "files": [
    "apk-releases"
  ],
  "scripts": {
    "ng": "ng",
    "start": "ng serve --configuration development",
    "build": "ng build",
    "buildCss": "npx tailwindcss build src/styles.css",
    "build-prod": "ng build --configuration production",
    "watch": "ng build --watch --configuration development",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "resources": "capacitor-resources -p android,ios && node resources.js",
    "apk-debug": "cd android && ./gradlew assembleDebug && cd .."
  },
  "publishConfig": {
    "registry": "https://nexus.spreezy.in/repository/npm-hosted/"
  },
  "dependencies": {
    "@angular/animations": "^16.2.4",
    "@angular/cdk": "^16.2.3",
    "@angular/common": "^16.2.4",
    "@angular/compiler": "^16.2.4",
    "@angular/core": "^16.2.4",
    "@angular/fire": "^7.6.1",
    "@angular/forms": "^16.2.4",
    "@angular/platform-browser": "^16.2.4",
    "@angular/platform-browser-dynamic": "^16.2.4",
    "@angular/router": "^16.2.4",
    "@capacitor/android": "^5.3.0",
    "@capacitor/cli": "^5.3.0",
    "@capacitor/core": "^5.3.0",
    "@capacitor/ios": "^5.3.0",
    "@ng-icons/core": "^25.2.0",
    "@ng-icons/ionicons": "^25.2.0",
    "capacitor-resources": "^1.2.1",
    "cypress": "^13.1.0",
    "firebase": "^10.4.0",
    "jwt-decode": "^4.0.0",
    "rippleui": "^1.12.1",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.13.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^16.2.1",
    "@angular/cli": "^16.2.1",
    "@angular/compiler-cli": "^16.2.4",
    "@types/jest": "^29.5.12",
    "autoprefixer": "^10.4.15",
    "jest": "^29.7.0",
    "jest-preset-angular": "^14.0.3",
    "postcss": "^8.4.29",
    "tailwindcss": "^3.3.3",
    "typescript": "~4.9.4"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "setupFilesAfterEnv": [
      "<rootDir>/src/setup.jest.ts"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/dist/"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "<rootDir>/tsconfig.spec.json",
        "stringifyContentPathRegex": "\\.html$"
      }
    }
  }
}
